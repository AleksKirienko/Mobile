<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".ActivityFour">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="374dp"
        android:layout_height="142dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text="Penguin species"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView01"
                android:text="" />

            <TextView
                android:id="@+id/TextView02"
                android:text="Emperor"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView03"
                android:text="Crested"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView04"
                android:text="Golden haired"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView05"
                android:text="Small"
                android:textStyle="bold"
                android:typeface="serif" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="63dp"
                android:text="Height"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView02"
                android:gravity="center_horizontal"
                android:text="1,1-1,3 m" />

            <TextView
                android:id="@+id/textView03"
                android:gravity="center_horizontal"
                android:text="50-70 sm" />

            <TextView
                android:id="@+id/textView04"
                android:gravity="center_horizontal"
                android:text="114-160 sm" />

            <TextView
                android:id="@+id/textView05"
                android:gravity="center_horizontal"
                android:text="30-35 sm" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="304dp"
            android:layout_height="220dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView07"
                android:text="Photo"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="78dp"
                android:layout_height="43dp"
                android:src="@drawable/emperor" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="74dp"
                android:layout_height="43dp"
                android:src="@drawable/crested" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:src="@drawable/golden" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="98dp"
                android:layout_height="47dp"
                android:src="@drawable/small" />

        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="394dp"
        android:layout_height="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/hi" />

</androidx.constraintlayout.widget.ConstraintLayout>